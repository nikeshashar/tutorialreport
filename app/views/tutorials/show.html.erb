<% if @tutorial %>
  <div class="jumbotron jumbotron-fluid" style="padding: 10em inherit; margin-bottom:0px; padding-bottom:10px;">
    <div class="container" style="border-bottom-style:solid; border-width:5px;">
      <h2 class="display-4"><%= @tutorial.title %></h2>
    </div>

  </div>

  <div class="jumbotron jumbotron-fluid" style="padding: 10em inherit; margin-bottom:0px; padding-bottom:10px; border-bottom-style:solid; border-width:1px;">
    <div class="container">

      <h3 style="border-bottom-style:solid; border-width:1px;"><%= 'Description' %></h3>
      <h4 style="margin-bottom:50px;"><br><%= @tutorial.description %></br></h4>

      <h3 style="border-bottom-style:solid; border-width:1px;"><%= 'Link' %></h3>
      <h4 style="margin-bottom:50px;"><br><%= @tutorial.link %></br></h4>

      <h3 style="border-bottom-style:solid; border-width:1px;"><%= 'Average Rating' %></h3>
      <h4 style="margin-bottom:50px;"><br><%= @tutorial.rating %></br></h4>

      <h3 style="border-bottom-style:solid; border-width:1px;"><%= 'Tutorial Language' %></h3>
      <h4 style="margin-bottom:50px;"><br><%= @tutorial.language %></br></h4>

      <h3 style="border-bottom-style:solid; border-width:1px;"><%= 'Level' %></h3>
      <h4 style="margin-bottom:50px;"><br><%= @tutorial.suitability %></br></h4>

      <h3 style="border-bottom-style:solid; border-width:1px;"><%= 'Tutorial Type' %></h3>
      <h4 style="margin-bottom:50px;"><br><%= @tutorial.type_of_tutorial %></br></h4>
    </div>
  </div>
<% end %>

<div class="jumbotron jumbotron-fluid" style="padding: 10em inherit; margin-bottom:0px; padding-bottom:10px;">
  <div class="container">
    <div>
      <%= link_to 'Leave a review!', '/reviews/new' %>
    </div>
    <h2 class="display-4" style="border-bottom-style:solid; border-width:5px; margin-bottom:20px;"><%= "User Reviews" %></h2>
    <% if @reviews.any? %>
      <% @reviews.each do |r| %>
        <h3 style="border-bottom-style:solid; border-width:1px;"><%= "Review no: #{@reviews.index(r) + 1}" %></h3>
        <h4 style="margin-bottom:50px;"><br><%= r.description %></br></h4>
      <% end %>
    <% end %>
  </div>
</div>
