<% if @tutorial %>
  <div class="jumbotron jumbotron-fluid" style="padding: 10em inherit; background-color:#008ae6; margin-bottom:0px; padding-bottom:10px;">
    <div class="container">
      <h2 class="display-4" style="color:white;"><%= @tutorial.title %></h2>
    </div>
  </div>

  <div class="jumbotron jumbotron-fluid" style="padding: 10em inherit; margin-bottom:0px; padding-bottom:10px;">
    <div class="container">
      <h3><%= 'Link' %></h3>
      <h4><br><%= @tutorial.link %></br></h4>

      <h3><%= 'Description' %></h3>
      <h4><br><%= @tutorial.description %></br></h4>

      <h3><%= 'Average Rating' %></h3>
      <h4><br><%= @tutorial.rating %></br></h4>

      <h3><%= 'Tutorial Language' %></h3>
      <h4><br><%= @tutorial.language %></br></h4>

      <h3><%= 'Level' %></h3>
      <h4><br><%= @tutorial.suitability %></br></h4>

      <h3><%= 'Tutorial Type' %></h3>
      <h4><br><%= @tutorial.type_of_tutorial %></br></h4>
    </div>
  </div>
<% end %>
